#!@LINUXDROID_PREFIX@/bin/sh

gtk-query-immodules-3.0 --update-cache
for i in $(find "@LINUXDROID_PREFIX@/share/icons" -type f -iname index.theme); do
    gtk-update-icon-cache --force --quiet $(dirname "${i}")
done
unset i

## Usually, glib and gdk-pixbuf should have own triggers
## but in Linuxdroid they don't have.
glib-compile-schemas "@LINUXDROID_PREFIX@/share/glib-2.0/schemas" > /dev/null
gdk-pixbuf-query-loaders --update-cache

exit 0

#!/data/data/com.linuxdroid/files/usr/bin/sh
set -e
PREFIX="/data/data/com.linuxdroid/files/usr"

if [ "${1}" = purge ]; then
    MIMEDIR="${PREFIX}/share/mime"
    if [ -e "${MIMEDIR}" ]; then
        cd "${MIMEDIR}" && rm -rf $(ls |grep -v ^packages$)
        rmdir --ignore-fail-on-non-empty "${MIMEDIR}"
    fi
fi
